{
  "**/*.{ts,tsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "**/*.{js,jsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "**/*.{json,md,yml,yaml}": [
    "prettier --write"
  ],
  "backend/**/*.ts": [
    "bash -c 'cd backend && npm run type-check'"
  ],
  "frontend/**/*.{ts,tsx}": [
    "bash -c 'cd frontend && npm run type-check'"
  ]
}
