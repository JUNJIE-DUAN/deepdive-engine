{
  "name": "deepdive-backend",
  "version": "1.0.0",
  "description": "DeepDive Engine Backend API",
  "private": true,
  "scripts": {
    "build": "nest build",
    "postbuild": "prisma generate && prisma migrate deploy",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "templates:seed": "ts-node -r tsconfig-paths/register src/scripts/seed-report-templates.ts",
    "thumbnails:generate": "ts-node -r tsconfig-paths/register src/scripts/generate-thumbnails.ts",
    "thumbnails:arxiv": "ts-node -r tsconfig-paths/register src/scripts/update-arxiv-thumbnails.ts",
    "seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@mozilla/readability": "^0.6.0",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/graphql": "^12.1.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^5.10.0",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pdfkit": "^0.17.3",
    "@types/xml2js": "^0.4.14",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "docx": "^9.5.1",
    "fontkit": "^2.0.4",
    "graphql": "^16.8.0",
    "helmet": "^8.1.0",
    "jsdom": "^24.1.0",
    "markdown-pdf": "^11.0.0",
    "mongodb": "^7.0.0",
    "neo4j-driver": "^5.28.2",
    "node-cron": "^3.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdfjs-dist": "^5.4.394",
    "pdfkit": "^0.17.2",
    "pdfkit-table": "^0.1.99",
    "pdfmake": "^0.2.20",
    "pptxgenjs": "^4.0.1",
    "prisma": "^5.10.0",
    "puppeteer": "^24.30.0",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.0",
    "rss-parser": "^3.12.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.5",
    "string-similarity-js": "^2.1.4",
    "turndown": "^7.2.2",
    "xml2js": "^0.6.2",
