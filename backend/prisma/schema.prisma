  updatedAt DateTime @updatedAt @map("updated_at")

  user  User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CollectionItem[]

  @@index([userId])
  @@map("collections")
}

model CollectionItem {
  id           String  @id @default(uuid())
  collectionId String  @map("collection_id")
  resourceId   String  @map("resource_id")
  note         String? @db.Text
  position     Int     @default(0)

  // Reading status tracking
  readStatus   ReadStatus @default(UNREAD) @map("read_status")
  readProgress Int        @default(0) @map("read_progress") // 0-100%
  lastReadAt   DateTime?  @map("last_read_at")

  // Personal tags (stored as JSON array)
  tags Json? @default("[]") // ["important", "to-read", "research"]

  addedAt DateTime @default(now()) @map("added_at")

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  resource   Resource   @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([collectionId, resourceId])
  @@index([collectionId])
  @@index([resourceId])
  @@index([readStatus])
  @@map("collection_items")
}

enum ReadStatus {
  UNREAD
  READING
  COMPLETED
  ARCHIVED
}

