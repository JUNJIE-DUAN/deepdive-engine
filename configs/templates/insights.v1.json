{
  "id": "insights.v1",
  "name": "提取关键观点",
  "category": "insights",
  "version": 1,
  "description": "识别并总结资源中的关键洞察与趋势",
  "schema": {
    "type": "object",
    "properties": {
      "insightClusters": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "theme": { "type": "string" },
            "summary": { "type": "string" },
            "evidence": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "resourceId": { "type": "string" },
                  "quote": { "type": "string" }
                },
                "required": ["resourceId", "quote"]
              }
            },
            "impact": { "type": "string" }
          },
          "required": ["theme", "summary", "evidence"]
        }
      },
      "openQuestions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "question": { "type": "string" },
            "whyImportant": { "type": "string" }
          },
          "required": ["question"]
        }
      }
    },
    "required": ["insightClusters"]
  },
  "promptConfig": {
    "extract": "列出每个资源的关键观点、论据、指标。",
    "analysis": "将观点聚类，说明主题、证据和潜在影响，并列出仍待解决的问题。",
    "generate": "确保返回 JSON，并严格满足 schema。",
    "validationHints": [
      "insightClusters 至少包含两个主题",
      "每个主题必须包含 evidence 数组"
    ],
    "failureRecovery": [
      { "type": "json_error", "prompt": "输出不是有效 JSON，请重新按照 schema 输出。" }
    ]
  }
}
